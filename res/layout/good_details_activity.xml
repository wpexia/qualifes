<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#f4f4f4">

    <RelativeLayout
            android:id="@+id/detail_headbar"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:background="@drawable/item_stroke">"
        <ImageButton
                android:id="@+id/detail_back"
                android:src="@drawable/icon_back_b"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_alignParentLeft="true"
                android:paddingLeft="15dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingRight="15dp"
                android:background="#ffffff"
                android:layout_centerInParent="true"/>
        <TextView
                android:id="@+id/detail_good_name"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:maxLength="17"
                android:textColor="#6e6e6e"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_toRightOf="@+id/detail_back"
                android:layout_toLeftOf="@+id/detail_back_home"/>

        <ImageButton
                android:id="@+id/detail_back_home"
                android:src="@drawable/back_home"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:background="#ffffff"
                android:layout_centerInParent="true"/>
    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/detail_content_img"
            android:layout_width="fill_parent"
            android:layout_height="224dp"
            android:background="@color/white"
            android:layout_below="@+id/detail_headbar">

        <ViewFlipper
                android:id="@+id/detail_imgs"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_alignParentTop="true" android:layout_centerHorizontal="true"/>
        <LinearLayout
                android:id="@+id/dots"
                android:layout_width="fill_parent" android:layout_height="wrap_content"
                android:layout_below="@+id/detail_imgs"
                      android:gravity="center_horizontal"
                      android:orientation="horizontal"
               />
        <ImageButton
                android:id="@+id/detail_star"
                android:src="@drawable/star_none"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="11dp"
                android:background="#ffffff"
                android:layout_toLeftOf="@+id/detail_share"
                android:layout_alignBottom="@+id/detail_share"/>
        <ImageButton
                android:id="@+id/detail_share"
                android:src="@drawable/share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="17dp"
                android:background="#ffffff"
                android:layout_alignParentBottom="true"/>
    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/detail_good_info"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/detail_content_img"
            android:background="@drawable/item_stroke">

        <TextView
                android:id="@+id/detail_goods_name"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:lines="2"
                android:textColor="#6e6e6e"
                android:textSize="14sp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"/>
        <TextView
                android:id="@+id/detail_shop_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff3300"
                android:textSize="18sp"
                android:layout_below="@+id/detail_goods_name"
                android:layout_marginTop="0dp"
                android:layout_alignLeft="@+id/detail_goods_name"/>
        <TextView
                android:id="@+id/detail_market_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#dedede"
                android:textSize="12sp"
                android:layout_toRightOf="@+id/detail_shop_price"
                android:layout_marginLeft="13dp"
                android:layout_alignBottom="@+id/detail_shop_price"/>
        <TextView
                android:id="@+id/detail_discount"
                android:layout_width="38dp"
                android:layout_height="14dp"
                android:textColor="#ff3300"
                android:textSize="9sp"
                android:layout_marginLeft="8dp"
                android:gravity="center"
                android:layout_toRightOf="@+id/detail_market_price"
                android:layout_alignBottom="@+id/detail_market_price"
                android:background="@drawable/textview_border"/>
        <TextView
                android:id="@+id/detail_origin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#6e6e6e"
                android:textSize="10sp"
                android:layout_below="@+id/detail_discount"
                android:layout_marginTop="5dp"
                android:layout_alignLeft="@+id/detail_shop_price"/>

        <ImageButton
                android:id="@+id/detail_good_info_press"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:src="@drawable/icon_in"
                android:background="@color/white"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout
            android:id="@+id/detail_spec"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:clickable="true"
            android:layout_below="@+id/detail_good_info"
            android:background="@drawable/item_stroke"
            >
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#6e6e6e"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:text="规格"/>
        <ImageButton
                android:id="@+id/detail_spec_press"
                android:src="@drawable/icon_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:background="@color/white"
                android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout
            android:id="@+id/detail_gooddata"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/detail_spec"
            android:background="@drawable/item_stroke"
            >
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#6e6e6e"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:text="商品参数"/>
        <ImageButton
                android:id="@+id/detail_gooddata_press"
                android:src="@drawable/icon_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginRight="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
    </RelativeLayout>
    <LinearLayout
            android:id="@+id/detail_bottombar"
            android:layout_height="48dp"
            android:layout_width="fill_parent"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            >
        <RelativeLayout
                android:id="@+id/detail"
                android:layout_width="136dp"
                android:layout_height="match_parent"
                android:background="#ffffff">
            <FrameLayout
                    android:id="@+id/detail_icon_shoppingcart"
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_centerVertical="true"
                    android:layout_height="fill_parent" >
                <ImageView
                        android:src="@drawable/icon_shoppingcart"
                        android:layout_width="fill_parent"
                        android:paddingRight="15dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        />

                <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/badge"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|right"
                        android:background="@drawable/badge"
                        android:text="23"
                        android:textSize="12dp"
                        android:visibility="invisible"
                        android:textColor="@android:color/white" />
            </FrameLayout>
            <Button
                    android:id="@+id/detail_closing_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="16sp"
                    android:textColor="#6e6e6e"
                    android:background="#ffffff"
                    android:layout_toRightOf="@+id/detail_icon_shoppingcart"
                    android:text="去结算"/>
        </RelativeLayout>
        <Button
                android:id="@+id/detail_addto_shoppingcart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00aaff"
                android:textColor="#ffffff"
                android:gravity="center"
                android:text="加入购物车"/>
    </LinearLayout>
</RelativeLayout>
