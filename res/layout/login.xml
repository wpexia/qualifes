<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f4f4"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48sp"
        android:background="#00aaff"
        >

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="15dp"
            android:background="@null"
            android:src="@drawable/icon_back" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="用户登录"
            android:layout_centerVertical="true"
            android:gravity="center_horizontal"
            android:textColor="#ffffff"
            android:textSize="18sp" >    
        </TextView>
        
        
        
        
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="38dp"
        android:background="#ffffff"
        android:orientation="vertical" >

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="#b1b1b1" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/icon_username"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:gravity="center"
                android:src="@drawable/icon_username" />

            <EditText
                android:id="@+id/LoginUsername"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="false"
                android:layout_alignParentStart="false"
                android:layout_marginLeft="18dp"
                android:layout_toRightOf="@id/icon_username"
                android:background="@null"
                android:inputType="text"
                android:text="请输入手机号"
                android:textColor="#b1b1b1"
                android:textSize="14sp" >

                <requestFocus />
            </EditText>
        </RelativeLayout>

       

        

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="15dp"
            android:background="#b1b1b1" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/icon_password"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                
                android:gravity="center"
                android:src="@drawable/icon_password" />

            <EditText
                android:id="@+id/LoginPassword"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="18dp"
                android:layout_toRightOf="@id/icon_password"
                android:background="@null"
                android:inputType="text"
                android:text="请输入登录密码"
                android:textColor="#b1b1b1"
                android:textSize="14sp" />

            
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="#b1b1b1" />
    </LinearLayout>
    
    
    <LinearLayout 
        android:layout_marginTop="26dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingRight="15dp"
        >

    <Button
        android:id="@+id/ForgetPassword"
        android:layout_width="fill_parent"
        android:layout_height="14dp"
        android:background="@null"
        android:gravity="right"
        android:paddingTop="0dp"
        android:text="忘记密码？"
        android:textColor="#6e6e6e"
        android:textSize="12sp" >

     </Button>
       </LinearLayout>
          
        <Button
                android:id="@+id/Login"
                android:layout_marginTop="21dp"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="#c3223f"
                android:gravity="center"
                android:text="登录"
                android:textColor="#ffffff"
                android:textSize="16sp"
                 >
                
                
            </Button>
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
             >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="还没账号？赶快"        
                android:textColor="#6e6e6e"
                android:textSize="14sp"     
                >
                
            </TextView>
            <Button
                android:id="@+id/RegisterInLogin"
                android:layout_width="28dp"
				android:layout_height="16dp"
                 android:background="@null"
                 android:text="注册"
                 android:textColor="#00aaff"
                 android:textSize="14sp"
                 >
            
                
            </Button>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="吧"        
                android:textColor="#6e6e6e"
                android:textSize="14sp"  
                >
                
            </TextView>
      </LinearLayout>
        
    
</LinearLayout>