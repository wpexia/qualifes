<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:background="@color/f4f4f4"
                android:layout_height="fill_parent">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:orientation="vertical"
                    android:id="@+id/moren"
                    android:layout_width="match_parent"
                    android:background="@color/white"
                    android:layout_height="100dp">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="35dp"
                android:paddingLeft="15dp"
                android:textColor="#6e6e6e"
                android:text="曹冰冰"
                android:id="@+id/textView6" android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#6e6e6e"
                android:text="上海市闵行区浦江镇三路公路3585号6号楼"
                android:id="@+id/textView7"
                android:paddingLeft="15dp"
                android:paddingTop="15dp"
                android:layout_below="@+id/textView6" android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>
        <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:button="@drawable/radiobutton"
                android:id="@+id/positionradio" android:layout_centerVertical="true" android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#00aaff"
                android:textSize="12sp"
                android:paddingTop="10dp"
                android:paddingRight="17dp"
                android:text="默认地址"
                android:id="@+id/textView8" android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/positionradio"
                android:layout_toStartOf="@+id/positionradio"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="16sp"
                android:paddingTop="14dp"
                android:paddingRight="17dp"
                android:text="18964959647"
                android:layout_below="@+id/textView8"
                android:id="@+id/textView9" android:layout_toLeftOf="@+id/positionradio"
                android:layout_toStartOf="@+id/positionradio"/>
    </RelativeLayout>
    <ListView android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:id="@+id/listView"
              android:layout_marginTop="10dp"
              android:layout_below="@+id/moren"/>
</RelativeLayout>