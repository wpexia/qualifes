<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="70dp"
    android:minHeight="70dp"
    android:background="#ffffff">
    <TextView 
        android:id="@+id/home_search_kind_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="20dp"
        android:textSize="16sp"
        android:textColor="#6e6e6e"/>
    <TextView
        android:id="@+id/home_search_kind_item_children"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_below="@+id/home_search_kind_item_name"
        android:layout_alignLeft="@+id/home_search_kind_item_name"
        android:layout_marginTop="9dp"
        android:textSize="14sp"
        android:textColor="#bebebe"/>
    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
               android:id="@+id/point"
               android:visibility="invisible"
            android:src="@drawable/point"
            android:layout_alignParentRight="true"
               android:layout_centerVertical="true"
            />
    <View android:layout_width="fill_parent" android:layout_height="1dp"
          android:layout_alignParentBottom="true"
            android:background="#dedede"/>
</RelativeLayout>
