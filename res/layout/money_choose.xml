<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48sp"
            android:background="#00aaff"
            >
        <ImageButton
                android:id="@+id/back_button"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="15dp"
                android:background="@null"
                android:src="@drawable/icon_back"/>
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="我的红包"
                android:gravity="center_horizontal"
                android:textColor="#ffffff"
                android:textSize="18sp" android:id="@+id/title">
        </TextView>
    </RelativeLayout>
    <LinearLayout
            android:orientation="vertical"
            android:background="@color/f4f4f4"
            android:layout_width="match_parent"
            android:paddingTop="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_height="match_parent">
        <RelativeLayout
                android:layout_width="fill_parent"
                android:background="#e9e9e9"
                android:layout_height="71dp">
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:id="@+id/editText"
                    android:background="@drawable/money_edit"
                    android:lines="1"
                    android:inputType="number"
                    android:paddingLeft="8dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toLeftOf="@+id/addMoney"
                    android:layout_marginRight="20dp"
                    android:hint="请输入红包号"
                    android:textSize="14sp"
                    android:textColorHint="#bebebe"
                    android:layout_centerVertical="true"/>
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="添加红包"
                    android:textSize="16sp"
                    android:background="#e9e9e9"
                    android:layout_marginRight="18dp"
                    android:textColor="#bebebe"
                    android:id="@+id/addMoney"
                    android:layout_centerVertical="true" android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <ListView android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/listView"/>
    </LinearLayout>
</LinearLayout>