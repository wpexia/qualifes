<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:minHeight="81dp"
                android:id="@+id/chooseposition"
                android:layout_height="81dp">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="曹兵兵"
            android:textColor="#6e6e6e"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="15dp"
            android:textSize="16sp"
            android:id="@+id/name" android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上海市杨浦区218号815室"
            android:textSize="14sp"
            android:layout_marginTop="15dp"
            android:textColor="#6e6e6e"
            android:id="@+id/position"
            android:layout_below="@+id/name" android:layout_alignLeft="@+id/name"
            android:layout_alignStart="@+id/name"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18699997855"
            android:layout_marginRight="50dp"
            android:layout_marginTop="16dp"
            android:textColor="#6e6e6e"
            android:textSize="16sp"
            android:id="@+id/mobie" android:layout_alignParentTop="true" android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_in"
            android:background="#ffffffff"
            android:layout_marginRight="15dp"
            android:id="@+id/imageButton" android:layout_centerVertical="true" android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>
</RelativeLayout>