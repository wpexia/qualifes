<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:minHeight="180dp"
                android:clickable="true"
                android:layout_marginBottom="20dp"
                android:layout_height="180dp" android:id="@+id/item">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单号:"
            android:id="@+id/textView6"
            android:layout_marginLeft="15dp"
            android:textColor="#6e6e6e"
            android:textSize="10sp"
            android:layout_marginTop="10dp"
            android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#6e6e6e"
            android:id="@+id/sn"
            android:textSize="10sp"
            android:layout_toRightOf="@+id/textView6"
            android:layout_alignTop="@+id/textView6"
            android:layout_toEndOf="@+id/textView6"/>
    <ImageView
            android:layout_width="60dp"
            android:layout_marginTop="14dp"
            android:src="@drawable/img_empty"
            android:layout_height="60dp"
            android:id="@+id/image" android:layout_below="@+id/textView6" android:layout_alignLeft="@+id/textView6"
            android:layout_alignStart="@+id/textView6"/>
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:lines="2"
            android:textSize="12sp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="50dp"
            android:textColor="#6e6e6e"
            android:id="@+id/name" android:layout_alignTop="@+id/image"
            android:layout_toRightOf="@+id/image" android:layout_toEndOf="@+id/image"/>
    <View android:layout_width="fill_parent" android:layout_height="1dp"
          android:layout_below="@id/name"
          android:layout_alignLeft="@id/name"
          android:background="@color/f4f4f4"
          android:layout_marginRight="15dp"
          android:layout_marginTop="8dp"
          android:id="@+id/view2"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:lines="1"
            android:layout_marginTop="6dp"
            android:id="@+id/attr" android:layout_below="@+id/view2" android:layout_alignLeft="@+id/view2"
            android:layout_alignStart="@+id/view2"/>
    <View android:layout_width="fill_parent" android:layout_height="1dp"
          android:layout_below="@id/attr"
          android:layout_alignLeft="@id/name"
          android:background="@color/f4f4f4"
          android:layout_marginRight="15dp"
          android:layout_marginTop="6dp"
          android:id="@+id/view3"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#e3223f"
            android:text="等待支付"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="18dp"
            android:id="@+id/status" android:layout_alignParentBottom="true" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
    <Button
            android:layout_width="70dp"
            android:layout_height="28dp"
            android:text="去支付"
            android:textColor="#6e6e6e"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/orderbutton"
            android:id="@+id/button" android:layout_alignParentBottom="true" android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#e3223f"
            android:layout_marginBottom="10dp"
            android:id="@+id/money" android:layout_above="@+id/button" android:layout_alignRight="@id/button"
            />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单金额:"
            android:layout_marginRight="15dp"
            android:textColor="#6e6e6e"
            android:id="@+id/textView18" android:layout_alignTop="@+id/money"
            android:layout_toLeftOf="@+id/button" android:layout_toStartOf="@+id/button"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_in"
            android:layout_marginRight="15dp"
            android:id="@+id/imageView9" android:layout_alignTop="@+id/name" android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:textColor="#6e6e6e"
            android:textSize="10sp"
            android:text="下单时间"
            android:id="@+id/add_time" android:layout_above="@+id/image" android:layout_toRightOf="@+id/sn"
            android:layout_toEndOf="@+id/sn"/>
</RelativeLayout>