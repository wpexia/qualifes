<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:minHeight="120dp"
                android:id="@+id/good"
                android:background="@color/white"
                android:layout_height="120dp">

    <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/img_empty"
            android:id="@+id/image" android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:lines="2"
            android:textSize="14sp"
            android:textColor="#6e6e6e"
            android:id="@+id/name" android:layout_alignTop="@+id/image"
            android:layout_toRightOf="@+id/image" android:layout_toEndOf="@+id/image"/>
    <View android:layout_width="match_parent" android:layout_height="1dp"
          android:background="#dedede"
          android:layout_alignLeft="@id/name"
          android:layout_below="@id/name"
          android:layout_marginTop="8dp"
          android:id="@+id/view"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="12sp"
            android:textColor="#6e6e6e"
            android:id="@+id/attr" android:layout_alignTop="@+id/view" android:layout_alignLeft="@+id/view"
            android:layout_alignStart="@+id/view"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="12sp"
            android:textColor="#6e6e6e"
            android:id="@+id/num" android:layout_below="@id/attr"
            android:layout_alignLeft="@+id/attr" android:layout_alignStart="@+id/attr"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:id="@+id/money"
            android:textSize="16sp"
            android:textColor="#ff3300"
            android:layout_alignBottom="@id/num"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>
    <View android:layout_width="match_parent" android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#dedede"
            />
</RelativeLayout>