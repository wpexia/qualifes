<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f4f4"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48sp"
        android:background="#00aaff"
        >

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="15dp"
            android:background="@null"
            android:src="@drawable/icon_back" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="注册"
            android:layout_centerVertical="true"
            android:gravity="center_horizontal"
            android:textColor="#ffffff"
            android:textSize="18sp" >    
        </TextView>
        
        
        
        
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="38dp"
        android:background="#ffffff"
        android:orientation="vertical" >

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="#b1b1b1" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/icon_username"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:gravity="center"
                android:src="@drawable/icon_username" />

            <EditText
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="false"
                android:layout_alignParentStart="false"
                android:layout_marginLeft="18dp"
                android:layout_toRightOf="@id/icon_username"
                android:background="@null"
                android:inputType="text"
                android:text="请输入手机号"
                android:textColor="#b1b1b1"
                android:textSize="14sp" >

                <requestFocus />
            </EditText>
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="15dp"
            android:background="#b1b1b1" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/icon_code"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:gravity="center"
                android:src="@drawable/icon_code" />

            <EditText
                android:id="@+id/codename"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="18dp"
                android:layout_toRightOf="@id/icon_code"
                android:background="@null"
                android:inputType="text"
                android:text="请输入验证码"
                android:textColor="#b1b1b1"
                android:textSize="14sp" />

            <Button
                android:id="@+id/get_code"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="#00000000"
                android:text="免费获取"
                android:textColor="#00aaff"
                android:textSize="14sp" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="15dp"
            android:background="#b1b1b1" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/icon_password"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                
                android:gravity="center"
                android:src="@drawable/icon_password" />

            <EditText
                android:id="@+id/password_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="18dp"
                android:layout_toRightOf="@id/icon_password"
                android:background="@null"
                android:inputType="text"
                android:text="请设置登录密码"
                android:textColor="#b1b1b1"
                android:textSize="14sp" />
            <LinearLayout 
                android:id="@+id/add_part"
                android:layout_width="24dp"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:layout_alignParentRight="true"
                ></LinearLayout>
           <RelativeLayout
               android:layout_width="50dp"
               android:layout_height="20dp"
               android:layout_toLeftOf="@id/add_part"
                android:layout_marginTop="15dp"
               android:background="#00aaff" >
            <Button
                android:id="@+id/show_password"
                android:layout_width="48dp"
                android:layout_height="18dp"
                android:layout_centerInParent="true"
                android:background="#ffffff"
                android:text="显示"
                android:textColor="#00aaff"
                android:textSize="10sp" ></Button>
              </RelativeLayout>
            </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="#b1b1b1" />
    </LinearLayout>
          <Button
              android:layout_width="fill_parent"
              android:layout_height="16dp"
              android:layout_marginTop="56dp"
              android:background="@null"
              android:gravity="center"
              android:text="《品质生活用户服务协议》"
              android:textColor="#00aaff"
              android:textSize="14sp" >
            
        </Button>
       
        
            <Button
                android:id="@+id/agree"
                android:layout_marginTop="15dp"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="#c3223f"
                android:gravity="center"
                android:text="同意协议并注册"
                android:textColor="#ffffff"
                android:textSize="16sp"
                 >
                
                
            </Button>
            

        
    
</LinearLayout>