<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/f4f4f4"
                tools:context="com.qualifies.app.qualifieslife.SearchResultActivity">

    <RelativeLayout
            android:id="@+id/home_search_result_head"
            android:layout_width="fill_parent"
            android:layout_height="96px"
            android:background="#00aaff"
            android:focusable="true"
            android:focusableInTouchMode="true">

        <ImageButton
                android:id="@+id/home_search_result_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:background="@drawable/icon_back_b"
                android:layout_centerVertical="true"/>

        <EditText
                android:id="@+id/home_search_result_input"
                android:layout_width="match_parent"
                android:layout_height="60px"
                android:layout_toRightOf="@+id/home_search_result_back"
                android:layout_marginLeft="32px"
                android:layout_toLeftOf="@+id/home_search_result_search"
                android:layout_marginRight="30px"
                android:layout_centerVertical="true"
                android:background="@drawable/home_search_input"
                android:textSize="10sp"/>

        <TextView
                android:id="@+id/home_search_result_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30px"
                android:textSize="16sp"
                android:clickable="true"
                android:textColor="@drawable/home_search_search"
                android:layout_centerVertical="true"
                android:background="#00aaff"
                android:text="搜索"
                />
    </RelativeLayout>
    <LinearLayout
            android:id="@+id/home_search_result_order"
            android:layout_width="fill_parent"
            android:layout_height="80px"
            android:layout_below="@+id/home_search_result_head"
            android:background="@drawable/item_stroke"
            android:orientation="horizontal">
        <TextView
                android:id="@+id/search_result_order_default"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:textSize="12sp"
                android:gravity="center"
                android:scaleType="fitXY"
                android:textColor="@drawable/search_result_button"
                android:text="默认"/>
        <TextView
                android:id="@+id/search_result_order_price"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:textSize="12sp"
                android:gravity="center"
                android:scaleType="fitXY"
                android:textColor="@drawable/search_result_button"
                android:text="价格"/>
        <TextView
                android:id="@+id/search_result_order_sales"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:textSize="12sp"
                android:gravity="center"
                android:scaleType="fitXY"
                android:textColor="@drawable/search_result_button"
                android:text="销量"/>
        <TextView
                android:id="@+id/search_result_order_popu"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:textSize="12sp"
                android:gravity="center"
                android:scaleType="fitXY"
                android:textColor="@drawable/search_result_button"
                android:text="人气"/>
    </LinearLayout>
    <ListView
            android:id="@+id/home_search_result_items"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/home_search_result_order">

    </ListView>
</RelativeLayout>
