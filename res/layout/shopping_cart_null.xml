<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:background="@color/f4f4f4"
                android:layout_height="match_parent">
    <RelativeLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="48sp"
            android:background="#00aaff"
            >

        <ImageButton
                android:id="@+id/back_button"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="15dp"
                android:background="@null"
                android:src="@drawable/icon_back"/>

        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="购物车"
                android:gravity="center_horizontal"
                android:textColor="#ffffff"
                android:textSize="18sp" android:id="@+id/title">
        </TextView>
    </RelativeLayout>
    <ImageView
            android:src="@drawable/shopping_cart_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:id="@+id/imageView6" android:layout_below="@+id/header" android:layout_centerHorizontal="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="购物车空空如也"
            android:textColor="#6e6e6e"
            android:layout_marginTop="23dp"
            android:textSize="16sp"
            android:id="@+id/textView12" android:layout_below="@+id/imageView6" android:layout_centerHorizontal="true"/>
    <Button
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="45dp"
            android:text="去逛逛"
            android:background="@drawable/settingbutton"
            android:id="@+id/button4" android:layout_below="@+id/textView12" android:layout_centerHorizontal="true"/>

</RelativeLayout>