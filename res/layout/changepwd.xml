<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:background="@color/f4f4f4"
              android:layout_height="match_parent">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48sp"
            android:background="#00aaff"
            >

        <ImageButton
                android:id="@+id/back_button"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="15dp"
                android:background="@null"
                android:src="@drawable/icon_back"/>

        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="修改密码"
                android:layout_centerVertical="true"
                android:gravity="center_horizontal"
                android:textColor="#ffffff"
                android:textSize="18sp">
        </TextView>
    </RelativeLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="50dp"
            android:background="#ffffff"
            android:orientation="vertical">

        <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="#b1b1b1"/>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_weight="1">

            <ImageView
                    android:id="@+id/icon_old"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentLeft="true"
                    android:gravity="center"
                    android:src="@drawable/icon_lock"/>

            <EditText
                    android:id="@+id/old_pwd"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="18dp"
                    android:layout_toRightOf="@id/icon_old"
                    android:background="@null"
                    android:inputType="text"
                    android:hint="请输入当前登录密码"
                    android:textColorHint="#b1b1b1"
                    android:textSize="14sp">

                <requestFocus/>
            </EditText>
        </RelativeLayout>


        <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="15dp"
                android:background="#b1b1b1"/>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_weight="1">

            <ImageView
                    android:id="@+id/icon_new"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentLeft="true"
                    android:gravity="center"
                    android:src="@drawable/icon_unlock"/>

            <EditText
                    android:id="@+id/new_pwd"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="18dp"
                    android:layout_toRightOf="@id/icon_new"
                    android:background="@null"
                    android:inputType="textPassword"
                    android:hint="请输入新登录密码"
                    android:textColorHint="#b1b1b1"
                    android:textSize="14sp"/>


        </RelativeLayout>

        <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="#b1b1b1"/>
    </LinearLayout>

    <Button
            android:id="@+id/Login"
            android:layout_marginTop="50dp"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="@drawable/red_button"
            android:gravity="center"
            android:text="确认"
            android:textColor="#ffffff"
            android:textSize="16sp"
            >
    </Button>


</LinearLayout>