<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:minHeight="100dp"
                android:clickable="true"
                android:id="@+id/item"
                android:background="@drawable/item_stroke" android:layout_height="100dp">

    <TextView
            android:id="@+id/info_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ff3300"
            android:textColor="#ffffff"
            android:textSize="9sp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="4dp"
            android:layout_marginBottom="5dp"
            android:text="TOP"/>

    <ImageView
            android:id="@+id/info_image"
            android:layout_width="70dp"
            android:src="@drawable/img_empty"
            android:layout_height="70dp"
            android:layout_below="@+id/info_top"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="24dp"
            android:scaleType="fitXY"
            />

    <TextView
            android:id="@+id/info_goods_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:lines="2"
            android:textColor="#6e6e6e"
            android:textSize="11sp"
            android:layout_marginRight="15dp"
            android:layout_toRightOf="@+id/info_image"
            android:layout_marginTop="8dp"
            />
    <TextView
            android:id="@+id/info_shop_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff3300"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/info_goods_name"
            android:layout_toRightOf="@+id/info_image"
            android:text="￥198.00"
            />
    <TextView
            android:id="@+id/info_market_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#6e6e6e"
            android:textSize="9sp"
            android:layout_toRightOf="@+id/info_shop_price"
            android:layout_marginLeft="5dp"
            android:layout_alignBottom="@+id/info_shop_price"
            android:text="￥598.00"
            />
    <TextView
            android:id="@+id/info_discount"
            android:layout_width="38dp"
            android:layout_height="14dp"
            android:textColor="#ff3300"
            android:textSize="9sp"
            android:layout_below="@+id/info_shop_price"
            android:layout_alignLeft="@+id/info_shop_price"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:text="9.3折"
            android:background="@drawable/textview_border"
            />
    <TextView
            android:id="@+id/info_origin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#6e6e6e"
            android:textSize="9sp"
            android:layout_below="@+id/info_discount"
            android:layout_toRightOf="@+id/info_image"
            android:layout_marginTop="2dp"
            android:text="产地 美国"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:src="@drawable/star"
            android:layout_marginRight="15dp"
            android:background="@color/white"
            android:layout_height="wrap_content"
            android:id="@+id/star" android:layout_below="@+id/info_goods_name"
            android:layout_alignParentRight="true" android:layout_alignParentEnd="true"/>
</RelativeLayout>
