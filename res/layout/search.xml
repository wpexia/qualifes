<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:background="@color/f4f4f4"
                android:layout_height="match_parent">

    <RelativeLayout
            android:id="@+id/home_search_head"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:background="#00aaff"
            android:focusable="true"
            android:focusableInTouchMode="true">

        <ImageButton
                android:id="@+id/home_search_back"
                android:layout_width="wrap_content"
                android:src="@drawable/icon_back_b"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:background="#00aaff"
                android:layout_centerVertical="true"/>

        <EditText
                android:id="@+id/home_search_input"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_toRightOf="@+id/home_search_back"
                android:layout_marginLeft="16dp"
                android:layout_toLeftOf="@+id/home_search_search"
                android:layout_marginRight="15dp"
                android:layout_centerVertical="true"
                android:background="@drawable/home_search_input"
                android:textSize="10sp"/>

        <TextView
                android:id="@+id/home_search_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:textSize="16sp"
                android:clickable="true"
                android:textColor="@drawable/home_search_search"
                android:layout_centerVertical="true"
                android:background="#00aaff"
                android:text="搜索"
                />
    </RelativeLayout>
    <RelativeLayout
            android:id="@+id/home_search_hot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/f4f4f4"
            android:layout_below="@+id/home_search_head"
            android:layout_marginTop="16dp">

        <TextView
                android:id="@+id/home_search_hot_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:textSize="12sp"
                android:padding="0dp"
                android:text="热门搜索"/>

        <GridView
                android:id="@+id/home_search_hot_items"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/home_search_hot_label"
                android:numColumns="4"
                android:layout_marginLeft="15dp"
                android:horizontalSpacing="8dp"
                android:verticalSpacing="10dp"
                android:layout_marginTop="20dp">

        </GridView>
    </RelativeLayout>
    <RelativeLayout
            android:id="@+id/home_search_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/f4f4f4"
            android:layout_below="@+id/home_search_hot"
            android:layout_marginTop="40dp">
        <TextView
                android:id="@+id/home_search_history_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:textSize="12sp"
                android:padding="0dp"
                android:text="搜索记录"/>
        <TextView
                android:id="@+id/home_search_history_clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:clickable="true"
                android:textSize="12sp"
                android:layout_alignParentRight="true"
                android:textColor="#00aaff"
                android:text="清除记录"/>

        <GridView
                android:id="@+id/home_search_history_items"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/home_search_history_label"
                android:numColumns="4"
                android:layout_marginLeft="15dp"
                android:horizontalSpacing="8dp"
                android:verticalSpacing="10dp"
                android:layout_marginTop="20dp">

        </GridView>
    </RelativeLayout>
</RelativeLayout>
