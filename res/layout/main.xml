<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <RelativeLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
                    android:background="@color/white"
                    android:id="@+id/start"
            >
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_slogan"
                android:paddingBottom="24dp"
                android:id="@+id/imageView8" android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
    <LinearLayout
            android:background="#ffffff"
            android:id="@+id/tab"
            android:visibility="invisible"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="48dp" android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true">
        <ImageButton
                android:background="#eeeeee"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:src="@drawable/home_home"
                android:id="@+id/home"/>
        <ImageButton
                android:background="#eeeeee"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:src="@drawable/home_list"
                android:id="@+id/list"/>
        <ImageButton
                android:background="#eeeeee"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:src="@drawable/home_shoppingcart"
                android:id="@+id/shoppingcart"/>
        <ImageButton
                android:background="#eeeeee"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:src="@drawable/home_me"
                android:id="@+id/personal"/>
    </LinearLayout>
    <FrameLayout
            android:background="#999999"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:id="@+id/main"
            android:visibility="invisible"
            android:layout_above="@+id/tab"
            >
    </FrameLayout>
</RelativeLayout>