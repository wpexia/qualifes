<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context="com.example.qualifieslife.HomePageActivity" >

    <RelativeLayout
        android:id="@+id/head"
        android:layout_width="fill_parent"
        android:layout_height="96px"
        android:background="#00aaff" >

        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:background="@drawable/logo"
            android:layout_centerVertical="true"
            android:contentDescription="@string/homepageLogo" />

        <EditText
            android:id="@+id/input"
            android:layout_width="match_parent"
            android:layout_height="60px"
            android:layout_toRightOf="@+id/logo"
            android:layout_marginLeft="28px"
            android:layout_centerVertical="true"
            android:layout_marginRight="30px"
            android:background="@drawable/shape"/>
        
        <ImageButton 
            android:id="@+id/search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/input"
            android:background="@drawable/search"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
	<ImageView 
	    android:id="@+id/firstPic"
	    android:layout_width="match_parent"
	    android:layout_height="320px"
	    android:background="@drawable/ic_launcher"
	    android:layout_below="@+id/head"/>
	
	<LinearLayout
	    android:id="@+id/twoPicViewGroup"
        android:layout_width="fill_parent"
        android:layout_height="170px"
        android:orientation="horizontal"
        android:weightSum="2" 
        android:layout_below="@+id/firstPic"
	    android:layout_marginTop="10px" >

        <ImageButton 
		    android:id="@+id/secondPic"
		    android:layout_width="wrap_content"
		    android:layout_height="fill_parent"
		    android:layout_weight="1"
		    android:background="@drawable/ic_launcher" />
        
		<ImageButton
	    	android:id="@+id/thirdPic"
	    	android:layout_width="wrap_content"
	    	android:layout_height="fill_parent"
	    	android:layout_weight="1"
	    	android:background="@drawable/ic_launcher"/>
    </LinearLayout>
    
		<RelativeLayout
		    android:id="@+id/care"
		    android:layout_width="160px"
		    android:layout_height="200px"
		    android:layout_below="@+id/twoPicViewGroup"
	    	android:layout_marginTop="10px" 
	    	android:background="#e3223f">
		    
		</RelativeLayout>
		
		<ListView 
		    android:id="@+id/firstList"
		    android:layout_width="match_parent"
		    android:layout_height="200px"
		    android:layout_below="@+id/twoPicViewGroup"
	    	android:layout_marginTop="10px"
	    	android:layout_toRightOf="@+id/care">
		    
		</ListView>
		
		<ListView 
		    android:id="@+id/secondList"
		    android:layout_width="match_parent"
		    android:layout_height="200px"
		    android:layout_below="@+id/care"
	    	android:layout_marginTop="10px">
		    
		</ListView>
		
		<RelativeLayout
		    android:id="@+id/clean"
		    android:layout_width="160px"
		    android:layout_height="200px"
		    android:layout_below="@+id/firstList"
	    	android:layout_marginTop="10px" 
	    	android:background="#e3223f"
	    	android:layout_alignParentRight="true"
	    	android:layout_toRightOf="@+id/clean">
		    
		</RelativeLayout>
		
       	<ListView 
       	    android:id="@+id/thirdList"
       	    android:layout_width="fill_parent"
       	    android:layout_height="match_parent">
       	    
       	</ListView>
</RelativeLayout>